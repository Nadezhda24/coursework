#ifndef _TRANSLATION_H   
#define _TRANSLATION_H  
#include <string>
#include <math.h>
#include <iomanip>
#include <iostream>
using namespace std;
int t = 5;

//перевод из 10-ой в другую систему счисления 
double translation(double  digit, int ss, int accuracy) {
	accuracy = pow(10, accuracy);
	int str = 0;
	long long answer = 0;
	int whole_part = int(digit); // целая часть 
	double fraction = digit - whole_part; // дробная часть 
	int n;



	// перевод целой части 
	while (whole_part > 0) {

		str++;
		n = whole_part % ss;
		answer = answer * 10 + n;
		whole_part = (whole_part - n) / ss;


	}
	while (answer > 0) {
		n = answer % 10;
		whole_part = whole_part * 10 + n;
		answer = answer / 10;
		str--;
	}
	whole_part = whole_part * pow(10, str);
	double g;
	// перевод дробной части 
	if (fraction*accuracy != 0) {

		answer = 0;

		int count_accuracy = 0;
		while (fraction*accuracy != 0) {

			count_accuracy++;

			answer = answer * 10 + (int)(fraction*ss);
			fraction = (fraction*ss) - (int)(fraction*ss);
		}


		g = answer / pow(10, count_accuracy);
	}
	else { g = 0; }


	double ans = whole_part + g;
	return ans;

}
//перевод из 10-ой в др систему счисления 
double translation_file(double  digit, int ss, int accuracy) {
	accuracy = pow(10, accuracy);
	int str = 0;
	long long answer = 0;
	int whole_part = int(digit); // целая часть 
	double fraction = digit - whole_part; // дробная часть 
	int n;

	
	cout << setw(t) << " Перевод числа " << digit << " в 8-ую систему счисления : " << endl;

	cout << setw(t) << " Перевод целой части числа: " << endl;
	

	// перевод целой части 
	while (whole_part > 0) {
		
		cout << setw(t) << ' ' << whole_part << " | " << ss << endl;

		str++;
		n = whole_part % ss;
		answer = answer * 10 + n;
		whole_part = (whole_part - n) / ss;

		cout << "-" << whole_part * ss << " |--" << endl;
		cout << "---- " << whole_part << endl;
		cout << " " << n << endl;

	
	}
	while (answer > 0) {
		n = answer % 10;
		whole_part = whole_part * 10 + n;
		answer = answer / 10;
		str--;
	}
	whole_part = whole_part * pow(10, str);
	double g;
	// перевод дробной части 
	if (fraction*accuracy != 0) {
		
		cout << " Перевод дробной части числа : " << endl;
		cout << "| " << fraction << endl;
		

		answer = 0;

		int count_accuracy = 0;
		while (fraction*accuracy != 0) {
			
			cout << "|* " << ss << endl;
			cout << "|--------" << endl;
			cout << "| " << fraction * ss << endl;
			
			count_accuracy++;

			answer = answer * 10 + (int)(fraction*ss);
			fraction = (fraction*ss) - (int)(fraction*ss);
		}

		
		cout << "V" << endl;
		
		g = answer / pow(10, count_accuracy);
	}
	else { g = 0; }


	double ans = whole_part + g;
	return ans;

}

// перевод из 8-ой в 10-ую 
double translation_10(double digit, int ss, int accuracy) {


	cout << setw(t) << " Перевод числа " << digit << " в 10-ую систему счисления : " << endl;


	long long answer = 0;
	int whole_part = int(digit);
	// целая часть 

	int fraction = (digit - whole_part)*pow(10, accuracy); // дробная часть 

	int str = 0;
	int rez_whole_part = 0;
	while (whole_part > 0)
	{

		int d = whole_part % 10;
		if (d > 7) { cout << "ERROR" << endl; return 0; }
		rez_whole_part = rez_whole_part + d * pow(ss, str);

		cout << d << " * " << ss << '^' << str;
		str++;
		whole_part = whole_part / 10;
		if (whole_part > 0) cout << " + ";
	}
	double rez_fraction = 0;
	str = 1;
	while (fraction > 0) {
		cout << " + ";
		int d = fraction % 10;

		if (d > ss - 1) { cout << "ERROR" << endl; }
		if (d == 0) { fraction = fraction / 10; }
		else {
			rez_fraction = rez_fraction + d / (pow(ss, str));
			cout << d << " * " << ss << '^' << "(-" << str << ')';
			str++;
			fraction = fraction / 10;
			if (fraction > 0) cout << " + ";
		}
	}


	double rez = rez_whole_part + rez_fraction;

	cout << "= " << rez << endl;

	
	return rez;
}



#define _CRT_SECURE_NO_WARNINGS
#endif   #pragma once
