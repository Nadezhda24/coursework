#ifndef _INDEX_H   
#define _INDEX_H
#pragma hdrstop
#include "Unit1.h"
#include "Unit2.h"
#include <vcl.h>
#include <tchar.h>
#include <string>


using namespace std;

int k, k_op;
//коэффициент для выбора состояния
int index(char c) {
	if (((c >= 'a') && (c <= 'z')) || ((c >= 'G') && (c <= 'Z')) || (c =='п')) { k = 1; }
	else if(((c >= '0') && (c <= '9')) ||((c >= 'A')&&(c<='F'))) { k = 2; }
	else if ((c == '%') || (c == '+') || (c == '-') || (c == '*') || (c == '/') || (c == '(') || (c == ')')) { k = 3; }
	else if (c == ' ') { k = 4; }
	return k;
}

//коэффиент опперации
int indexk_op(string z) {

	if ((z == "/") || (z == "*") || (z == "%") || (z == "div")) { k_op = 3; }
	else if ((z == "+") || (z == "-")) { k_op = 2; }
	else if (z == "(") { k_op = 1; }
	else if (z == ")") { k_op = 0; }
	else if (index(z[0])==2 || z[0] == ' ') { k_op = 4; }
	return k_op;
}

#define _CRT_SECURE_NO_WARNINGS
#endif   
